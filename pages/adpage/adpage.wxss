}

.getInfoTitle {
  display: flex;
  justify-content: center;
  color: #666;
  margin-top: 10px;
  height: 28px;
}

.msgGray {
  /* 设置字体垂直居中 */
  line-height: 28px;
  /* 控制文本水平方向居中 */
  text-align: center;
}

/* 中间强调文字：1对1陪练 样式 */

.msgRed {
  color: red;
  font-size: 28px;
  /* 设置字体垂直居中 */
  line-height: 28px;
  /* 控制文本水平方向居中 */
  text-align: center;
}

/* 统一设置输入框和按钮的距离屏幕边缘距离为20px */

.getInfoInputBox {
  padding-left: 20px;
  padding-right: 20px;
  margin-top: 10px;
}

.inputInfoChildName {
  background-color: #f3f3f3;
  padding: 10px;
  margin-top: 10px;
  border-radius: 5px;
  font-size: 16px;
}

.inputInfoPhoneNumber {
  background-color: #f3f3f3;
  padding: 10px;
