/* pages/bmiresult/bmiresult.wxss */

.title_tips {
  height: 46px;
  background: #f8f4f4;
  align-items: center;
  display: flex;
}

.title_tips image {
  height: 25px;
  width: 25px;
  margin-left: 10px;
}

.title_tips text {
  margin-left: 5px;
  font-size: 16px;
  color: #5ac2d9;
}

.result_tips {
  margin-top: 20px;
  margin-left: 5px;
  display: flex;
  align-items: center;
  height: 50px;
}

.blue-line {
  height: 20px;
  width: 5px;
  background-color: #56a6b8;
}

.bmi-tips {
  font-size: 14px;
  margin-left: 10px;
}

.bmi-number {
  color: #f2934e;
}

.suggest {
  margin-top: 15px;
  margin-left: 10px;
  margin-right: 10px;
  line-height: 1.5em;
}

.suggest text {
  font-size: 14px;
}

.bmi_standard {
  width: 100%;
  margin-top: -30px;
}

.bmi_standard image {
  width: 100%;
  height: 200px;
}

.btn_calculate {
  margin-top: 20px;
  border-radius: 5px;
  margin-left: 10px;
  margin-right: 10px;
  background-color: #5ac2d9;
  color: white;
}

.button-hover {
  background-color: #56a6b8;
}

.btn_share {
  margin-top: 5px;
  margin-left: 10px;
  margin-right: 10px;
  color: #56a6b8;
}
